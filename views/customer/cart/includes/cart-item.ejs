<article class="cart-item">
  <div class="cart-item-info">
    <h2><%= item.product.title %></h2>
    <img class="img-preview"src="<%= item.product.imagePath %>" alt="<%= item.product.title %>">
    <p>
      $ <span class="cart-item-total-price"> <%= item.totalPrice %> </span>( $
      <%= item.product.price %> )
    </p>
  </div>

  <form
    class="cart-item-management"
    data-productid="<%= item.product.id %>"
    data-csrf="<%= locals.csrfToken %>"
  >
    <input type="number" value="<%= item.quantity %>" required />
    <button class="btn">Update</button>
  </form>
</article>
